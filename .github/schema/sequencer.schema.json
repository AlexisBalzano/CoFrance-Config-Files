{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sequencer settings",
  "description": "Schema for sequencer.json",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Schema identifier (instance may include this)"
    },
    "version": {
      "type": "string",
      "description": "Version of the sequencer configuration",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    }
  },
  "additionalProperties": {
    "type": "object",
    "description": "Array of objects; each object contains named holds. Each named hold object MUST include numeric upperfl and lowerfl.",
    "items": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false
      }
    }
  }
}

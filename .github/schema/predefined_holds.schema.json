{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Predefined Holds",
  "description": "Schema for predefined_holds.json",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Schema identifier (instance may include this)"
    },
    "version": {
      "type": "string",
      "description": "Version of the predefined holds configuration",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    }
  },
  "additionalProperties": {
    "type": "array",
    "description": "Array of objects; each object contains named holds. Each named hold object MUST include numeric upperfl and lowerfl.",
    "items": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "upperfl": { "type": "number" },
          "lowerfl": { "type": "number" }
        },
        "required": ["upperfl", "lowerfl"],
        "additionalProperties": false
      }
    }
  }
}

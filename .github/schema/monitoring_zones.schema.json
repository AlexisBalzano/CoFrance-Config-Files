{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Monitoring Zones GeoJSON",
  "description": "Schema for maps/monitoring_zones.geojson (FeatureCollection of monitoring polygons)",
  "type": "object",
  "properties": {
    "type": { "type": "string", "const": "FeatureCollection" },
    "name": { "type": "string" },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "crs": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "properties": {
          "type": "object",
          "properties": { "name": { "type": "string" } },
          "required": ["name"]
        }
      },
      "required": ["type", "properties"],
      "additionalProperties": false
    },
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "type": { "type": "string", "const": "Feature" },
          "properties": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "name": { "type": "string" },
              "upper_altitude": { "type": "number" },
              "lower_altitude": { "type": "number" },
              "floor_altitude": { "type": "number" }
            },
            "required": ["name", "upper_altitude", "lower_altitude"]
          },
          "geometry": {
            "type": "object",
            
            "oneOf": [
              {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "type": { "type": "string", "const": "Polygon" },
                  "coordinates": {
                    "type": "array",
                    "items": {
                      "type": "array",
                      "minItems": 4,
                      "items": {
                        "type": "array",
                        "minItems": 2,
                        "maxItems": 2,
                        "items": { "type": "number" }
                      }
                    }
                  }
                },
                "required": ["type", "coordinates"]
              },
              {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "type": { "type": "string", "const": "MultiPolygon" },
                  "coordinates": {
                    "type": "array",
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "array",
                        "minItems": 4,
                        "items": {
                          "type": "array",
                          "minItems": 2,
                          "maxItems": 2,
                          "items": { "type": "number" }
                        }
                      }
                    }
                  }
                },
                "required": ["type", "coordinates"]
              }
            ]
          }
        },
        "required": ["type", "properties", "geometry"]
      }
    }
  },
  "required": ["type", "features"],
  "additionalProperties": true
}
